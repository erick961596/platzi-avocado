{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@database": ["database/db.ts"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "context/AppContext.js", "initialState.js"  ],
  "exclude": [
    "node_modules"
  ]
}
